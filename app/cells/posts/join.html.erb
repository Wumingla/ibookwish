<div class="span4">
<div class="bookdate-box">
		<h4>我们想要借</h4>
		<div class="join-users">
		<% if @post.complete_user? %>
			<% @post.wish_users.each do |user| %>
		<div class="user">
				<%= account_avatar_tag(user, :style => "48x48", :image_css => "#{'grayscale' unless @post.complete_user_id == user.id}"  ) %>
		</div>
		<% end %>
		<% else @post.wish_users? %>
			<% @post.wish_users.each do |user| %>
		<div class="user">
				<%= account_avatar_tag(user, :style => "48x48") %>	
				<% if @post.account.id == current_account.id %>
				<%= render "join_form", :post => @post, :account => user %>
				<% else %>
					<div><p class="muted">已参与</p></div>
				<% end %>
		</div>
			<% end %>
		<% end %>

		<% unless @post.wish_users?  %>
			<p class="muted">目前还没有人想跟他借书，赶快加入吧</p>
		<% end %>
		</div>
</div>
</div>




