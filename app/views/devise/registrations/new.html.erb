<div class="row bookdate-box">
	<div class="span7">
		<h2>注册</h2>

		<%= simple_form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html => { :class => 'form-horizontal' } ) do |f| %>
		      <%= render "shared/error_messages", :target => resource %>
				<%= f.input :email,  :placeholder => "foo@bar.com" 	%>

				<div class="control-group">
			<%= f.label :gender, :class => 'control-label' %>
			<div class="controls">
				<label class="radio inline"><%= radio_button("account", "gender", "0", :class => "radio_buttons") %>男</label>
		<label class="radio inline"><%= radio_button("account", "gender", "1", :class => "radio_buttons", :checked => true) %>女</label>
			</div>
		</div>
				<%= f.input :password %>
				<%= f.input :password_confirmation %>
				<%= f.input :nickname %>

		<div class="form-actions">
			<div><%= f.submit "注册", :class => 'btn btn-primary', 'data-disable-with' => '注册中...' %></div>
		</div>
		<% end %>

	</div>
	<div class="span4">
				<%= render "devise/shared/links" %>

	</div>
</div>




