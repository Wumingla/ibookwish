<div class="row bookdate-box">
	<div class="span7">
		<h2>修改你的密码</h2>
		<%= simple_form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => { :method => :put, :class => 'form-horizontal'  }) do |f| %>
		      <%= render "shared/error_messages", :target => resource %>
  <%= f.hidden_field :reset_password_token %>

  <%= f.input :password, :label => "新密码" %>

  <%= f.input :password_confirmation %>


  		<div class="form-actions">
			<div><%= f.submit "提交", :class => 'btn btn-primary', 'data-disable-with' => '发送中...' %></div>
		</div><% end %>


	</div>
	<div class="span4">
				<%= render "devise/shared/links" %>
	</div>
</div>


