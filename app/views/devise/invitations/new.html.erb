<div class="row bookdate-box">
	<div class="span8">
		<h2><%= t "devise.invitations.new.header" %></h2>

<%= simple_form_for resource, :as => resource_name, :url => invitation_path(resource_name), :html => {:method => :post, :class => 'form-horizontal'} do |f| %>
		      <%= render "shared/error_messages", :target => resource %>

<% resource.class.invite_key_fields.each do |field| -%>
  <%= f.input field %>
<% end -%>

		<div class="form-actions">
			<div><%= f.submit t("devise.invitations.new.submit_button"), :class => 'btn btn-primary', 'data-disable-with' => '邀请中...' %></div>
		</div>
<% end %>


	</div>
</div>
