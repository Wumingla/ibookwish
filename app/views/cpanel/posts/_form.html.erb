<%= form_for @post, :html => { :class => 'form-horizontal' }, :url => cpanel_posts_path(@post)  do |f| %>
    <div class="control-group">
    <%= f.label :tags, :class => 'control-label' %>
    <div class="controls">
      <div class="text_field">
        <%= f.hidden_field :tag_names, :value => @post.tags.map(&:name).join(',') %>
      <ul id="post_tags">
      </ul> 
      </div>
    </div>
  </div>


  <div class="form-actions">
    <%= f.submit nil, :class => 'btn btn-primary', :id => 'post_submit' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                cpanel_posts_path, :class => 'btn' %>
  </div>
<% end %>
