<script src="/assets/post_post.js" type="text/javascript"></script>
<div class="row">
  <div class="span6">
    <%= form_for @post, :html => { :class => 'form-horizontal' } do |f| %>
          <%= render "shared/error_messages", :target => @post %>

  <div class="control-group">
    <%= f.label "isbn", :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :isbn, :class => 'text_field', :id => 'post_isbn' %>

      <%= f.button "获取", 
      :class => 'btn', :id => "get_book_button", :type => "button", :disabled => true%>
      <span id="isbn-help" rel='twipsy' title='<%= image_tag "ISBN.jpg" %>' data-placement="right">什么是ISBN?</span>
            <span class="help-block">输入是请直接输入数字，请勿输入"-"</span>

    </div>
  </div>

  <div class="control-group" id="share_book" style="display:none;">
    <%= f.label "分享图书", :class => 'control-label' %>
    <div class="controls" id="content">

    </div>
  </div>
  
    <div class="control-group">
    <%= f.label "我想要", :class => 'control-label' %>
    <div class="controls">
      <%= f.text_area :dream, :class => 'text_field',:placeholder => "写上你想要别人帮你完成的事" , :rows => '3' %>
    </div>
  </div>
    <div class="control-group">
    <%= f.label "标签", :class => 'control-label' %>
    <div class="controls">
      <div class="text_field">
        <%= f.hidden_field :tag_names, :value => @post.tags.map(&:name).join(',') %>
      <ul id="post_tags">
      </ul> 
      </div>
    </div>
  </div>

<%= hidden_field_tag 'lat'%>
<%= hidden_field_tag 'lng' %>
  </div>
  <div class="span4 left30">
    <div class="row">
      <div>
        <%= text_field_tag  "post_address_search", nil, :placeholder => "你的大致位置"  %>
        <%= link_to "查看该地址", "#", :class => "btn btn-primary", :style => "margin-bottom:9px;", :id => "address_ok" %>
      </div>
      <div>
        <div id="map"></div>
      </div>
    </div>
   
  </div>
</div>
  <div class="form-actions">
    <input type="button" data-disable-with ="注册中..." value="分享" class="btn btn-primary" id="post_submit">
  </div>

<% end %>

