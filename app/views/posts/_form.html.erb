<%= form_for @post, :html => { :class => 'form-horizontal' } do |f| %>
  <div class="control-group">
    <%= f.label "isbn", :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :isbn, :class => 'text_field', :id => 'post_isbn' %>
      <%= f.button "获取", :class => 'btn', :id => "get_book_button", :type => "button" %>
    </div>
  </div>
  <div class="control-group" id="share_book" style="display:none;">
    <%= f.label "分享图书", :class => 'control-label' %>
    <div class="controls" id="content">

    </div>
  </div>
  
    <div class="control-group">
    <%= f.label "愿望", :class => 'control-label' %>
    <div class="controls">
      <%= f.text_area :dream, :class => 'text_field',:placeholder => "写上你的小愿望" , :rows => '3' %>
    </div>
  </div>
    <div class="control-group">
    <%= f.label "标签", :class => 'control-label' %>
    <div class="controls">
      <div class="text_field">
        <%= f.hidden_field :tag_names, :value => @post.tags.map(&:name).join(',') %>
      <ul id="post_tags">
      </ul> 
      </div>
    </div>
  </div>

  <div class="form-actions">
    <%= f.submit "分享", :class => 'btn btn-primary', :id => 'post_submit' %>
  </div>
<% end %>
